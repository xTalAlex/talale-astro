---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import Frameworks from "@components/Frameworks.astro";
import Biography from "@components/Biography.astro";
import ProjectsCarousel from "@components/ProjectsCarousel.astro";
import Introduction from "@components/Introduction.astro";
import Features from "@components/Features.astro";
import MessageBox from "@components/MessageBox.astro";
import Contacts from "@components/Contacts.astro";
import FeaturedImages from "@components/FeaturedImages.astro";
import Prices from "@components/Prices.astro";
import LatestPosts from "@components/LatestPosts.astro";
import ScreenSizes from "@components/ScreenSizes.astro";
import LaravelDailyTips from "@components/vue/LaravelDailyTips.vue";
import Minesweeper from "@components/Minesweeper.astro";
import NintendoSwitchCTA from "@components/NintendoSwitchCTA.astro";
import Metabee from "@components/Metabee.astro";
import LighthouseTest from "@components/LighthouseTest.astro";
import Map from "@components/Map.astro";
---

<Layout>
	<Hero />
	<div class="px-5 md:mx-auto container max-w-5xl space-y-12 pt-12">

		<Introduction />

		<Features />

		<Prices />

		<LighthouseTest />

		<ProjectsCarousel />

		<Frameworks />

		<FeaturedImages />

		<LatestPosts />

		<!-- <LaravelDailyTips client:only="vue" /> -->

		<ScreenSizes />

		<Minesweeper />

		<NintendoSwitchCTA />

		<!-- <Metabee /> -->

		<div class="w-fit mx-auto space-y-5">
			<Biography />
		</div>

		<div class="card w-full glass" id="contatti">
			<figure><Map /></figure>
			<div class="card-body justify-center space-y-10 mt-4">
				<Contacts />
				<div class="w-full">
					<MessageBox />
				</div>
			</div>
		</div>

	</div>

</Layout>
