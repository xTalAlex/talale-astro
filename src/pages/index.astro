---
import Layout from "../layouts/Layout.astro";
import Config from "../site.config.js";
import Hero from "../components/Hero.astro";
import Frameworks from "../components/Frameworks.astro";
import Biography from "../components/Biography.astro";
import Carousel from "../components/Carousel.astro";
---

<Layout title={Config.title}>
	<Hero />
	<div class="mx-auto md:max-w-5xl space-y-12">
		<Frameworks />
		<div class="mockup-window bg-neutral">
			<div class="px-4 border-t border-neutral">
				<Carousel />
			</div>
		</div>
		<Biography />
	</div>
</Layout>
