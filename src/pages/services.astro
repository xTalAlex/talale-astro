---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/partials/services/Hero.astro";
import IncludedServices from "@components/partials/services/IncludedServices.astro";
import Features from "@components/partials/services/Features.astro";
import Support from "@components/partials/services/Support.astro";
import Timeline from "@components/partials/services/Timeline.astro";
import CTA from "@components/partials/services/CTA.astro";

const title = "Servizi di sviluppo web";
const description =
  "Scegli il pacchetto di sviluppo web su misura per te e scopri i servizi base inclusi.";
---

<Layout title={title} description={description}>
  <div
    class="container w-full max-w-5xl overflow-hidden px-5 md:mx-auto lg:overflow-visible"
  >
    <Hero {title} {description} />

    <IncludedServices />

    <Features />

    <Support />
  </div>

  <Timeline>
    <CTA />
  </Timeline>
</Layout>
