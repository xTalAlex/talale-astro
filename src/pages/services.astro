---
import Layout from "@layouts/Layout.astro";
import bgImage from "@assets/images/pixelshop.png";
import Image from "astro/components/Image.astro";
import Config from "../site_config.json";
import { Icon } from "astro-icon/components";
import mascotte from "@assets/images/mascotte3.png";
import decapDemo from "@assets/images/decapdemo.png";
import filamentDemo from "@assets/images/filamentdemo.png";

const title =
  "Fai crescere la tua attività online con un sito web personalizzato";
const description =
  "Scegli il pacchetto di sviluppo web su misura per te e scopri i servizi base inclusi.";

const supportServices = [
  {
    title: "Risoluzione bug e problemi",
    icon: "pixelarticons:bug",
  },
  {
    title: "Monitoraggio traffico e rendimento SEO",
    icon: "pixelarticons:speed-fast",
  },
  {
    title: "Campagne google ADS",
    icon: "pixelarticons:coin",
  },
  {
    title: "Gestione profilo Google Maps",
    icon: "pixelarticons:map",
  },
  {
    title: "Aggiornamenti software e di sicurezza",
    icon: "pixelarticons:repeat",
  },
  // {
  //     "title": "Interventi sul codice",
  //     "icon": "pixelarticons:code"
  // },
  {
    title: "Assistenza e supporto tecnico",
    icon: "pixelarticons:suitcase",
  },
];
---

<Layout title={title} description={description}>
  <div
    class="container w-full max-w-5xl overflow-hidden px-5 md:mx-auto lg:overflow-visible"
  >
    <!-- HEADER  -->
    <div class="pb-96 md:pb-72 lg:pb-32">
      <div class="relative">
        <div class="my-10 max-w-xl md:ml-10 lg:ml-0">
          <h1 class="py-12 text-4xl font-bold sm:text-5xl">
            {title}
          </h1>
          <h2 class="max-w-sm text-2xl">
            {description}
          </h2>
        </div>

        <div
          class="absolute -bottom-80 -right-10 -z-10 md:-bottom-64 md:right-0 lg:-bottom-16"
        >
          <div class="relative h-64 md:h-80">
            <div
              class="absolute inset-0 -z-10 animate-pulse bg-gradient-to-br from-primary to-secondary opacity-40 blur-3xl"
            >
            </div>
            <Image class="h-full object-cover" src={bgImage} alt={title} />
          </div>
        </div>
      </div>
    </div>

    <!-- BASE SERVICES -->
    <div class="mt-12 md:mt-20">
      <h2
        class="-mt-20 mb-10 pt-20 text-2xl font-bold uppercase"
        id="included-services"
      >
        Tutto ciò di cui hai bisogno per una presenza online solida e
        professionale
      </h2>
      <div class="join join-vertical w-full space-y-2">
        {
          Config.features.map((service) => (
            <div class="collapse join-item collapse-plus bg-base-200">
              <input type="radio" name="base-services" />
              <div class="collapse-title text-xl font-bold">
                {service.title}
              </div>
              <div class="collapse-content">
                <div class="py-4">
                  <p>{service.description}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- FEATURES -->
    <div>
      <h2
        class="mx-auto mt-32 text-center text-3xl font-bold uppercase md:text-4xl"
      >
        Pannello di controllo CMS personalizzato per una facile gestione del tuo
        sito web
      </h2>
      <div class="my-20 text-center text-xl">
        Gestione autonoma dei contenuti: tieni sotto controllo i tuoi contenuti
        più importanti, sempre.
      </div>

      <div class="grid gap-10 md:grid-cols-2">
        <div
          class="group card relative overflow-hidden shadow-md shadow-primary ring ring-primary"
        >
          <div
            class="absolute inset-x-0 bottom-6 z-10 hidden place-items-center group-hover:grid"
          >
            <a
              class="card glass link link-primary px-3 py-2"
              href="https://demo.filamentphp.com/"
              target="_blank">Prova la demo</a
            >
          </div>
          <Image
            class="h-full w-full object-cover transition duration-500 group-hover:scale-110"
            src={filamentDemo}
            alt="Filament CMS Demo | Pannello di controllo CMS personalizzato"
          />
        </div>
        <div
          class="group card relative hidden overflow-hidden shadow-md shadow-primary ring ring-primary md:block"
        >
          <div
            class="absolute inset-x-0 bottom-6 z-10 hidden place-items-center group-hover:grid"
          >
            <a
              class="card glass link link-primary px-3 py-2"
              href="https://demo.decapcms.org/"
              target="_blank">Prova la demo</a
            >
          </div>
          <Image
            class="h-full w-full object-cover transition duration-500 group-hover:scale-110"
            src={decapDemo}
            alt="Decap CMS Demo | Pannello di controllo CMS personalizzato"
          />
        </div>
      </div>

      <div class="my-20 text-center">
        <a class="btn btn-primary btn-lg font-bold uppercase" href="/#prices"
          >Scegli un pacchetto di sviluppo web</a
        >
      </div>

      <div class="hidden w-full items-center gap-10 pt-20 opacity-20 sm:flex">
        <div class="flex-none font-bold uppercase">
          Assistenza, Manutenzione e Pubblicità
        </div>
        <div class="w-full">
          <div class="h-0.5 w-full bg-neutral-content"></div>
        </div>
      </div>
      <h2
        class="-mt-12 mb-6 pt-20 text-center text-3xl font-bold uppercase md:text-4xl"
        id="support"
      >
        Massima tranquillità con il pacchetto <span class="text-nowrap"
          >Assistenza & Ads</span
        >
      </h2>
      <h3 class="mt-20 text-center text-2xl">
        Dedicati alla tua attività, non al tuo sito web: affidati alle cure di
        un esperto
      </h3>
      <div class="text-center text-xl">
        Interventi rapidi per un sito web sempre funzionante, aggiornato e
        performante.
      </div>

      <div class="mt-20">
        <div class="grid grid-cols-2 gap-4 sm:gap-6 lg:grid-cols-3">
          {
            supportServices.map((service) => (
              <div class="card min-h-32 bg-base-200 px-2 pb-12 pt-12 text-center shadow-md">
                <Icon
                  class="mx-auto size-8 stroke-secondary text-primary"
                  name={service.icon}
                />
                <div class="mx-auto mt-4 sm:w-2/3">{service.title}</div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="mx-auto mt-20 w-fit text-center">
        <a class="btn btn-primary btn-lg uppercase" href="/#support"
          >Attiva il tuo servizio di assistenza oggi stesso!</a
        >
        <div class="mt-6">
          Prova gratuita inclusa per i <a class="link" href="/#prices"
            >pacchetti di sviluppo web</a
          >
        </div>
      </div>
    </div>
  </div>

  <div class="container w-full max-w-5xl px-5 md:mx-auto">
    <!-- TIMELINE -->
    <h2 class="mt-32 text-2xl font-bold uppercase">
      Timeline di sviluppo web trasparente
    </h2>

    <div class="relative mt-20">
      <div class="sticky top-20 min-h-screen bg-base-100 pt-12" id="step1">
        <h3 class="-mt-6 text-nowrap text-3xl font-bold sm:text-5xl">
          Step 1: Ricerca
        </h3>
        <div class="mt-12">
          <div class="grid place-content-between gap-12 text-xl md:grid-cols-2">
            <div>
              <ul class="space-y-2">
                <li>Ricerca di mercato e analisi della concorrenza.</li>
                <li>Formulazione degli obiettivi.</li>
                <li>Definizione di tempistiche e budget.</li>
              </ul>
            </div>
            <div class="w-full place-self-end text-left md:max-w-xs">
              <div class="">
                Tempistiche: <span class="font-bold">1-3 giorni</span>
              </div>
            </div>
          </div>
          <div class="mt-10">
            <a href="#step2">
              <Icon
                class="mx-auto h-6 w-6 animate-pulse stroke-current opacity-25 transition hover:opacity-100"
                name="pixelarticons:arrow-down"
              />
            </a>
          </div>
        </div>
        <div class="h-[50vh]"></div>
      </div>
      <div class="sticky top-20 min-h-screen bg-base-100 pt-12" id="step2">
        <h3 class="-mt-6 text-nowrap text-3xl font-bold sm:text-5xl">
          Step 2: Progettazione
        </h3>
        <div class="mt-12">
          <div class="grid place-content-between gap-12 text-xl md:grid-cols-2">
            <div>
              <ul class="space-y-2">
                <li>Creazione del logo wordmark e della brand identity.</li>
                <li>Design template grafico.</li>
                <li>Definizione delle funzionalità.</li>
              </ul>
              <div></div>
            </div>
            <div class="w-full place-self-end text-left md:max-w-xs">
              <div class="">
                Tempistiche: <span class="font-bold">1 settimana*</span>
              </div>
              <div class="mt-6 text-sm">
                *A partire dal versamento dell'acconto
              </div>
              <div class="text-sm">
                *Le tempistiche possono variare in base al numero di revisioni
              </div>
            </div>
          </div>
          <div class="mt-10">
            <a href="#step3">
              <Icon
                class="mx-auto h-6 w-6 animate-pulse stroke-current opacity-25 transition hover:opacity-100"
                name="pixelarticons:arrow-down"
              />
            </a>
          </div>
        </div>
        <div class="h-[50vh]"></div>
      </div>
      <div class="sticky top-20 min-h-screen bg-base-100 pt-12" id="step3">
        <h3 class="-mt-6 text-nowrap text-3xl font-bold sm:text-5xl">
          Step 3: Svilluppo & Test
        </h3>
        <div class="mt-12">
          <div class="grid place-content-between gap-12 text-xl md:grid-cols-2">
            <div>
              <ul class="space-y-2">
                <li>Caricamento online dell'ambiente di sviluppo.</li>
                <li>Implementazione del tema grafico.</li>
                <li>Sviluppo backend e frontend.</li>
              </ul>
            </div>
            <div class="w-full place-self-end text-left md:max-w-xs">
              <div>
                Tempistiche: <span class="font-bold">1-4 settimane*</span>
              </div>
              <div class="mt-6 text-sm">
                *Le tempistiche possono variare in base alla complessità del
                progetto e al numero di revisioni
              </div>
            </div>
          </div>
          <div class="mt-10">
            <a href="#step4">
              <Icon
                class="mx-auto h-6 w-6 animate-pulse stroke-current opacity-25 transition hover:opacity-100"
                name="pixelarticons:arrow-down"
              />
            </a>
          </div>
        </div>
        <div class="h-[50vh]"></div>
      </div>
      <div class="sticky top-20 min-h-screen bg-base-100 pt-12" id="step4">
        <h3 class="-mt-6 text-nowrap text-3xl font-bold sm:text-5xl">
          Step 4: Lancio
        </h3>
        <div class="mt-12">
          <div class="grid place-content-between gap-12 text-xl md:grid-cols-2">
            <div>
              <ul class="space-y-2">
                <li>Pubblicazione del sito web.</li>
                <li>Formazione all'utillizzo.</li>
              </ul>
              <div class="mt-6">
                Assistenza e monitoraggio secondo <a
                  class="link"
                  href="/services#support">piano mensile</a
                >.
              </div>
            </div>
            <div class="w-full place-self-end text-left md:max-w-xs">
              <div>
                Tempistiche: <span class="font-bold">1-3 giorni</span>
              </div>
            </div>
          </div>
          <div class="mt-10">
            <a href="#cta">
              <Icon
                class="mx-auto h-6 w-6 animate-pulse stroke-current opacity-25 transition hover:opacity-100"
                name="pixelarticons:arrow-down"
              />
            </a>
          </div>
        </div>
      </div>
      <div class="h-[50vh]"></div>
    </div>
    <div
      class="group relative mx-auto -mt-20 grid w-full max-w-min place-items-center bg-base-100 pt-32"
      id="cta"
    >
      <Image class="-ml-32 w-96" src={mascotte} alt="Crea il tuo sito web" />
      <a
        class="btn btn-primary btn-wide -mt-28 text-nowrap text-xl font-bold uppercase"
        href="/#contacts">Crea il tuo sito web</a
      >
    </div>
  </div>
</Layout>
