---
import Layout from "@layouts/Layout.astro";
import bgImage from "@assets/images/pixelshop.png";
import Image from "astro/components/Image.astro";
import Config from "../site_config.json";
import { Icon } from "astro-icon/components";
import mascotte from "@assets/images/mascotte3.png";

const title =
    "Fai crescere la tua attività online con un sito web personalizzato";
const description =
    "Scegli il pacchetto di sviluppo web su misura per te e scopri i servizi base inclusi.";
---

<Layout title={title} description={description}>
    <div class="px-5 md:mx-auto container w-full max-w-5xl overflow-hidden lg:overflow-visible">

        <!-- HEADER  -->
        <div class="pb-96 md:pb-72 lg:pb-44">
            <div class="relative">
                <div class="md:ml-10 max-w-xl my-10">
                    <h1 class="py-12 text-4xl sm:text-5xl font-bold">{title}</h1>
                    <h2 class="text-2xl max-w-sm">
                        {description}
                    </h2>
                </div>

                <div class="absolute -z-10 -right-10 md:right-0 md:-bottom-64 -bottom-80 lg:-bottom-16">
                    <div class="relative h-64 md:h-80">
                        <div class="absolute opacity-40 animate-pulse inset-0 -z-10 bg-gradient-to-br from-primary to-secondary blur-3xl">
                        </div>
                        <Image class="object-cover h-full" src={bgImage} alt={title} />
                    </div>
                </div>
            </div>
        </div>

        <!-- BASE SERVICES -->
        <div class="mt-20">
            <h2 class="text-2xl mb-20 uppercase font-bold pt-20 -mt-20" id="included-services">
                Tutto ciò di cui hai bisogno per una presenza online solida e professionale
            </h2>
            <div class="join join-vertical w-full space-y-2">
                {
                    Config.features.map((service, i) => (
                        <div class="join-item collapse collapse-plus bg-base-200">
                            <input type="radio" name="base-services" />
                            <div class="collapse-title text-xl font-bold">
                                {service.title}
                            </div>
                            <div class="collapse-content">
                                <div class="py-4">
                                    <p>{service.description}</p>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- PRICES -->
        <div class="relative mt-24 hidden">
            <div class="grid md:grid-cols-3 gap-10">
                <div class="md:col-span-2 overflow-hidden mx-auto w-full">
                    <div class="h-96 carousel carousel-vertical card bg-primary w-full">
                        <div class="carousel-item h-full" id="standard">
                            <img class="w-full object-cover" src="https://daisyui.com/images/stock/photo-1559703248-dcaaec9fab78.jpg" />
                        </div> 
                        <div class="carousel-item h-full" id="custom">
                            <img class="w-full object-cover" src="https://daisyui.com/images/stock/photo-1565098772267-60af42b81ef2.jpg" />
                        </div> 
                        <div class="carousel-item h-full" id="support">
                            <img class="w-full object-cover" src="https://daisyui.com/images/stock/photo-1572635148818-ef6fd45eb394.jpg" />
                        </div> 
                    </div>
                </div>
                <div>
                    <ul class="steps steps-vertical mb-10">
                        <li class="step step-primary"><a class="" href="#standard">Standard</a></li>
                        <li class="step"><a class="" href="#custom">ECommerce / Custom</a></li>
                        <li class="step"><a class="" href="#support">Assistenza & Pubblicità</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="px-5 md:mx-auto container w-full max-w-5xl">
        <!-- TIMELINE -->
        <h2 class="text-2xl font-bold mt-32 uppercase">Timeline di sviluppo web trasparente</h2>

        <div class="mt-20 relative">
            <div class="pt-12 sticky min-h-screen bg-base-100 top-20" id="step1">
                <h3 class="text-3xl font-bold -mt-6 sm:text-5xl text-nowrap">Step 1: Ricerca</h3>
                <div class="mt-12">
                    <div class="text-xl grid md:grid-cols-2 gap-12 place-content-between">
                        <div>
                            <ul class="space-y-2">
                                <li>Ricerca di mercato e analisi della concorrenza.</li>
                                <li>Formulazione degli obiettivi.</li>
                                <li>Definizione di tempistiche e budget.</li>
                            </ul>
                        </div>
                        <div class="place-self-end text-left w-full md:max-w-xs">
                            <div class="">Tempistiche: <span class="font-bold">1-3 giorni</span></div>
                        </div>
                    </div>
                    <div class="mt-10">
                        <a href="#step2">
                            <Icon
                                class="h-6 w-6 stroke-current mx-auto animate-pulse opacity-25 hover:opacity-100 transition"
                                name="pixelarticons:arrow-down"
                            />
                        </a>
                    </div>
                </div>
                <div class="h-[50vh]"></div>
            </div>
            <div class="pt-12 sticky min-h-screen bg-base-100 top-20" id="step2">
                <h3 class="text-3xl font-bold -mt-6 sm:text-5xl text-nowrap">Step 2: Progettazione</h3>
                <div class="mt-12">
                    <div class="text-xl grid md:grid-cols-2 gap-12 place-content-between">
                        <div>
                            <ul class="space-y-2">
                                <li>Creazione del logo wordmark e della brand identity.</li>
                                <li>Design template grafico.</li>  
                                <li>Definizione delle funzionalità.</li>
                            </ul>
                            <div></div>
                        </div>
                        <div class="place-self-end text-left w-full md:max-w-xs">
                            <div class="">Tempistiche: <span class="font-bold">1 settimana*</span></div>
                            <div class="mt-6 text-sm">*A partire dal versamento dell'acconto</div>
                            <div class="text-sm">*Le tempistiche possono variare in base al numero di revisioni</div>
                        </div>
                    </div>
                    <div class="mt-10">
                        <a href="#step3">
                            <Icon
                                class="h-6 w-6 stroke-current mx-auto animate-pulse opacity-25 hover:opacity-100 transition"
                                name="pixelarticons:arrow-down"
                            />
                        </a>
                    </div>
                </div>
                <div class="h-[50vh]"></div>
            </div>
            <div class="pt-12 sticky min-h-screen bg-base-100 top-20" id="step3">
                <h3 class="text-3xl font-bold -mt-6 sm:text-5xl text-nowrap">Step 3: Svilluppo & Test</h3>
                <div class="mt-12">
                    <div class="text-xl grid md:grid-cols-2 gap-12 place-content-between">
                        <div>
                            <ul class="space-y-2">
                                <li>Caricamento online dell'ambiente di sviluppo.</li>
                                <li>Implementazione del tema grafico.</li>
                                <li>Sviluppo backend e frontend.</li>
                            </ul>
                        </div>
                        <div class="place-self-end text-left w-full md:max-w-xs">
                            <div>Tempistiche: <span class="font-bold">1-4 settimane*</span></div>
                            <div class="mt-6 text-sm">*Le tempistiche possono variare in base alla complessità del progetto e al numero di revisioni</div>
                        </div>
                    </div>
                    <div class="mt-10">
                        <a href="#step4">
                            <Icon
                                class="h-6 w-6 stroke-current mx-auto animate-pulse opacity-25 hover:opacity-100 transition"
                                name="pixelarticons:arrow-down"
                            />
                        </a>
                    </div>
                </div>
                <div class="h-[50vh]"></div>
            </div>
            <div class="pt-32 sticky min-h-screen bg-base-100 top-20 -mt-20" id="step4">
                <h3 class="text-3xl font-bold -mt-6 sm:text-5xl text-nowrap">Step 4: Lancio</h3>
                <div class="mt-12">
                    <div class="text-xl grid md:grid-cols-2 gap-12 place-content-between">
                        <div>
                            <ul class="space-y-2">
                                <li>Pubblicazione del sito web.</li>
                                <li>Formazione all'utillizzo.</li>
                            </ul>
                            <div class="mt-6">Assistenza e monitoraggio secondo <a class="link" href="/services">piano mensile</a>.</div class="mt-6">
                        </div>
                        <div class="place-self-end text-left w-full md:max-w-xs">
                            <div>Tempistiche: <span class="font-bold">1-3 giorni</span></div>
                        </div>
                    </div>
                    <div class="mt-10">
                        <a href="#cta">
                            <Icon
                                class="h-6 w-6 stroke-current mx-auto animate-pulse opacity-25 hover:opacity-100 transition"
                                name="pixelarticons:arrow-down"
                            />
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="relative bg-base-100 grid place-items-center w-full group max-w-min mx-auto pt-32 -mt-20" id="cta">
            <Image class="w-96 -ml-32" src={mascotte} alt="Crea il tuo sito web"/>
            <a class="btn btn-wide -mt-28 text-xl font-bold btn-primary uppercase" href="/#contacts">Crea il tuo sito web</a>
        </div>
    </div>
</Layout>