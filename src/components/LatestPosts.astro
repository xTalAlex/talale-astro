---
import { posts } from "@data/posts";
import { formatDate } from "@lib/utils";

const { class: className } = Astro.props;
---

<div class:list={["relative", className]}>
  <div
    class="relative -mt-20 mb-12 pt-20 text-left text-3xl uppercase"
    id="latest-posts"
  >
    Dal Blog
  </div>
  <div
    class="from-primary to-secondary absolute inset-0 z-0 bg-linear-to-tl opacity-10 blur-3xl"
  >
  </div>
  <div class="relative z-10">
    <ul class="space-y-10">
      {
        posts.slice(0, 4).map((post) => (
          <li class="grid">
            <div class="badge badge-secondary badge-sm mb-2 w-24 place-self-end">
              {formatDate(post.date, "short")}
            </div>
            <div class="flex flex-col items-start text-left">
              <a href={`/blog/${post.slug}`}>
                <div class="link text-primary text-lg" set:html={post.title} />
              </a>
              <div class="line-clamp-3 max-w-md" set:html={post.excerpt} />
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>
