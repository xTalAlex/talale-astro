---
export interface Props {
	name: string,
    logo: string
    url: URL,
}

import { Image } from 'astro:assets';

const { name, logo, url } = Astro.props;

// const srcAttribute = "/images/icons/" + icon;
const altAttribute = name + " logo";
---

<div class="card card-compact justify-center items-center grayscale-0">
    <figure>
        <Image height="56" width="56" class="h-14 w-14"
            src={ logo }
            alt={ altAttribute }
        />
    </figure>
    <div class="card-body">
        <a href={url} target="_blank" class="link link-hover">{name}</a>
    </div>
</div>