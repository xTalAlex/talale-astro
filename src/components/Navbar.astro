---
import ThemeSwitcher from "./ThemeSwitcher.astro";
import Config from "../site_config.json";
import icon from "@assets/images/icon.png";
import { Icon } from "astro-icon";
---

<div class="navbar bg-base-300/50 backdrop-blur-2xl fixed z-50 h-16 font-semibold">
    <div class="navbar-start">
        <div class="dropdown">
            <label class="btn btn-ghost lg:hidden" tabindex="0">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h8m-8 6h16"></path>
                </svg>
            </label>
            <ul
                class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-300 rounded-box w-52"
                tabindex="0"
            >
                <li><a href="/">Home</a></li>
                <li tabindex="0">
                    <a class="justify-between">
                        Widget
                        <svg
                            class="fill-current"
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            ><path
                                d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                            ></path>
                        </svg>
                    </a>
                    <ul class="p-2 bg-base-300 shadow">
                        <li><a href="/#latest-posts">Dal Blog</a></li>
                        <li><a href="/#laravel-tips">Laravel Daily Tips</a></li>
                        <li><a href="/#minesweeper">Minesweeper</a></li>
                        <li><a href="/#messagebox">Messagebox</a></li>
                    </ul>
                </li>
                <li>
                    <a href="/nintendo-switch/1">Catalogo Nintendo Switch</a>
                </li>
                <li><a href="/medabots">Medabots</a></li>
            </ul>
        </div>
        <a href="/" class="hidden lg:flex btn btn-ghost normal-case text-xl">
            <img class="h-5 mr-2" src={icon} />
            <span class="">{Config.title}</span>
        </a>
    </div>

    <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            <li tabindex="0">
                <a class="justify-between">
                    Widget
                    <svg
                        class="fill-current"
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        ><path
                            d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                        ></path>
                    </svg>
                </a>
                <ul class="p-2 bg-base-300 mt-2 rounded-box">
                    <li><a href="/#latest-posts">Dal Blog</a></li>
                    <li><a href="/#laravel-tips">Laravel Daily Tips</a></li>
                    <li><a href="/#minesweeper">Minesweeper</a></li>
                    <li><a href="/#messagebox">Messagebox</a></li>
                </ul>
            </li>
            <li><a href="/nintendo-switch/1">Catalogo Nintendo Switch</a></li>
            <li><a href="/medabots">Medabots</a></li>
        </ul>
    </div>

    <div class="navbar-end">
        <ThemeSwitcher />
        <div class="dropdown dropdown-end">
            <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                <div class="w-6 rounded-full">
                    <Icon name="pixelarticons:user" />
                </div>
            </label>
            <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
                <li data-netlify-identity-button></li>
            </ul>
        </div>

    </div>
</div>
