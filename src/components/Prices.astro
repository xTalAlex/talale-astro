---
import { Icon } from "astro-icon/components";
import Config from "@config/freelance.json";

const prices = [
  {
    name: "Standard",
    amount: 750,
    plus: true,
    small: "Acconto da stabilire",
    description: "Siti vetrina, blog e landing page.",
    features: ["CMS custom o Wordpress", "Fino a 10 pagine"],
    base_services: true,
    manteinance_months_included: 1,
  },
  {
    name: "ECommerce / Custom",
    amount: 2000,
    plus: true,
    small: "Acconto da stabilire",
    description: "Soluzioni per negozi online, aziende e startup.",
    features: [
      "CMS custom",
      "Integrazione gestionale tramite API",
      "Pagamenti con Stripe e PayPal",
    ],
    base_services: true,
    manteinance_months_included: 2,
  },
  {
    name: "Assistenza & Ads",
    amount: 200,
    monthly: true,
    plus: false,
    small: "mese",
    description: "Supporto continuato",
    features: [
      "Correzione bug",
      "Monitoraggio SEO",
      "Campagne Google ADS",
      "Gestione profilo Google Maps",
      "Modifiche e aggiornamento contenuti",
      "Assistenza",
    ],
    base_services: false,
    manteinance_months_included: 0,
  },
];
---

<div class="space-y-10">
  <h2 class="card-title -mt-20 pb-10 pt-20 text-3xl font-bold" id="prices">
    Pacchetti di sviluppo siti web
  </h2>

  <div
    class="mx-auto grid max-w-sm cursor-default gap-12 text-primary-content md:max-w-5xl md:grid-cols-2 lg:grid-cols-3"
  >
    <div
      class="group relative flex flex-col overflow-hidden rounded-xl border-0 bg-opacity-0 from-secondary to-primary px-6 py-6 text-primary-content shadow-xl transition-all duration-500 ease-in-out hover:scale-105 md:max-w-sm lg:max-w-none"
    >
      <div
        class="absolute inset-0 -z-10 h-[200%] w-[200%] -translate-x-1/4 bg-gradient-to-br from-secondary from-10% to-primary bg-repeat transition duration-500 group-hover:-translate-x-1/2 group-hover:-translate-y-1/2"
      >
      </div>
      <div class="">
        <h3 class="font-bold uppercase">Standard</h3>
        <div>Per siti vetrina, blog e landing page.</div>

        <div class="mt-6 text-5xl">
          {prices[0].amount}€+
        </div>
        <span class="text-sm">Acconto da stabilire</span>
        <div class="divider"></div>
        <div class="mt-6 space-y-4">
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>CMS custom o Wordpress</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Fino a 10 pagine</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>
              <a class="link" href="/services#included-services">Servizi base</a
              > inclusi
            </div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>
              2 mesi di <strong>Assistenza & Ads</strong> inclusi
            </div>
          </div>
        </div>
      </div>
      <div class="divider"></div>
      <div class="mb-0 mt-auto pb-6">
        <a href="#contacts" class="btn btn-neutral uppercase">Contattami</a>
        <a href="/services" class="btn btn-ghost uppercase">Informazioni</a>
      </div>
    </div>
    <div
      class="group relative flex flex-col overflow-hidden rounded-xl border-0 from-secondary to-primary px-6 py-6 text-primary-content shadow-xl transition-all duration-500 ease-in-out hover:scale-105 md:max-w-sm lg:max-w-none"
    >
      <div
        class="absolute inset-0 -z-10 h-[200%] w-[200%] -translate-x-1/4 bg-gradient-to-br from-primary from-10% to-secondary bg-repeat transition duration-500 group-hover:-translate-x-1/2 group-hover:-translate-y-1/2"
      >
      </div>
      <div>
        <h3 class="font-bold uppercase">Ecommerce / Custom</h3>
        <div class="">Soluzioni per negozi online, aziende e startup.</div>
        <div class="mt-6 text-5xl">
          {Config.prices.custom}€+
        </div>
        <span class="text-sm">Acconto da stabilire</span>
        <div class="divider"></div>
        <div class="mt-6 space-y-4">
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>CMS custom</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Integrazione gestionale tramite API</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Pagamenti con Stripe e PayPal</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>
              <a class="link" href="/services#included-services">Servizi base</a
              > inclusi
            </div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>
              2 mesi di <strong>Assistenza & Ads</strong> inclusi
            </div>
          </div>
        </div>
      </div>
      <div class="divider"></div>
      <div class="mb-0 mt-auto pb-6">
        <a href="#contacts" class="btn btn-neutral uppercase">Contattami</a>
        <a href="/services" class="btn btn-ghost uppercase">Informazioni</a>
      </div>
    </div>
    <div
      class="group relative flex flex-col overflow-hidden rounded-xl border-0 bg-transparent bg-opacity-0 px-6 py-6 text-accent-content shadow-xl transition duration-500 ease-in-out hover:scale-105 sm:mx-auto md:col-span-2 md:w-full md:max-w-sm lg:col-span-1 lg:max-w-none"
      id="support"
    >
      <div
        class="absolute inset-0 -z-10 h-[200%] w-[200%] -translate-x-1/4 bg-gradient-to-br from-secondary from-10% to-accent bg-repeat transition duration-500 group-hover:-translate-x-1/2 group-hover:-translate-y-1/2"
      >
      </div>
      <div>
        <h3 class="font-bold uppercase">Assistenza & Ads</h3>
        <div>Supporto continuato</div>
        <div class="mb-6 mt-6 text-5xl">
          {Config.prices.support}€<span class="text-sm">/mese</span>
        </div>
        <div class="divider"></div>
        <div class="mt-6 space-y-4">
          <div class="flex">
            <Icon
              class="mr-2 mt-1 inline h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Correzione bug</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 inline h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Monitoraggio SEO</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 inline h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Campagne Google ADS</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 inline h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Gestione profilo Google Maps</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 inline h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Modifiche e aggiornamento contenuti</div>
          </div>
          <div class="flex">
            <Icon
              class="mr-2 mt-1 inline h-4 w-4 stroke-current"
              name="pixelarticons:checkbox"
            />
            <div>Assistenza</div>
          </div>
        </div>
      </div>
      <div class="divider"></div>
      <div class="mb-0 mt-auto pb-6">
        <a href="#contacts" class="btn btn-neutral uppercase">Contattami</a>
        <a href="/services#support" class="btn btn-ghost uppercase"
          >Informazioni</a
        >
      </div>
    </div>
  </div>

  <div class="pt-10 text-center opacity-80">
    <p>
      I prezzi sono da considerarsi una tantum dove non indicato e non includono
      i costi di hosting, dominio e altri servizi terzi.
    </p>
  </div>
</div>
