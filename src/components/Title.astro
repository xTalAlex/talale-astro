---
import { Icon } from 'astro-icon'

const { id, linkable = true } = Astro.props
---

<h2 class="text-2xl font-semibold -mt-20 pt-20" id={id}>
    <a class="cursor-pointer" href={ "#" + id }>
        <slot />
        { 
            linkable &&
                <span class="hidden sm:inline-block opacity-50 hover:opacity-100" >
                    <Icon class="inline h-8" name="pixelarticons:link"/>
                </span>
        }
    </a>
</h2>
