---
export interface Props {
  elID?: string;
}

const { elID = "vanta-birds-container" } = Astro.props;
---

<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/vanta@latest/vendor/three.r134.min.js"
></script>
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.birds.min.js"
></script>
<script is:inline define:vars={{ elID }}>
  VANTA.BIRDS({
    el: `#${elID}`,
    mouseControls: true,
    touchControls: true,
    gyroControls: false,
    minHeight: 200.0,
    minWidth: 200.0,
    scale: 1.0,
    scaleMobile: 1.0,
    backgroundColor: 0x1a1b1d,
    color1: 0xff972a,
    color2: 0x69398b,
    colorMode: "lerp",
    birdSize: 2.0,
    wingSpan: 60.0,
    speedLimit: 5.0,
    cohesion: 32.0,
    quantity: 2,
    backgroundAlpha: 0.0,
    separation: 100.0,
    alignment: 1.0,
    cohesion: 1.0,
  });
</script>
